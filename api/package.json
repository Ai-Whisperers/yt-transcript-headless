{
  "name": "yt-transcript-api",
  "version": "0.3.0-beta",
  "description": "Headless YouTube transcript extraction microservice",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "mcp": "tsx src/mcp/mcp-server.ts",
    "mcp:build": "tsc && node dist/mcp/mcp-server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "stealth-test": "tsx scripts/stealth-ab-test.ts",
    "stealth-test:quick": "tsx scripts/stealth-ab-test.ts 10",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "youtube",
    "transcript",
    "playwright",
    "microservice"
  ],
  "author": "AI Whisperers",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "playwright": "1.40.0",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "mime": "^2.6.0",
    "sirv": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  }
}
