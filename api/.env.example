# YouTube Transcript Extractor - Environment Configuration

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=10

PLAYLIST_RATE_LIMIT_WINDOW=300000
PLAYLIST_RATE_LIMIT_MAX=3
PLAYLIST_MAX_VIDEOS_LIMIT=100
PLAYLIST_CONCURRENCY=3

BATCH_RATE_LIMIT_WINDOW=300000
BATCH_RATE_LIMIT_MAX=5
BATCH_MAX_SIZE=50
BATCH_CONCURRENCY=3

# =============================================================================
# Browser Configuration
# =============================================================================
TIMEOUT_MS=30000
ENABLE_STEALTH=true

POOL_MAX_CONTEXTS=5
POOL_CONTEXT_MAX_AGE=300000
POOL_CONTEXT_MAX_USES=10
POOL_ACQUIRE_TIMEOUT=30000

# =============================================================================
# Persistence Layer
# =============================================================================
ENABLE_PERSISTENCE=true
DATABASE_PATH=./data/transcripts.db

# =============================================================================
# Cache Eviction Policies
# =============================================================================
CACHE_MAX_ENTRIES=10000
CACHE_MAX_SIZE_MB=500
CACHE_TTL_DAYS=30
CACHE_EVICTION_POLICY=LRU
CACHE_EVICTION_INTERVAL_HOURS=6

# =============================================================================
# RAG Configuration
# =============================================================================
ENABLE_RAG=false
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
LLM_PROVIDER=llama.cpp
LLM_MODEL=llama.cpp
LLAMA_CPP_URL=http://127.0.0.1:8080
VECTOR_STORE_PROVIDER=qdrant
VECTOR_COLLECTION_NAME=transcripts
QDRANT_URL=http://localhost:6333
CHROMA_URL=http://localhost:8000
